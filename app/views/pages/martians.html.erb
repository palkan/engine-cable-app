<div class="columns" data-controller="martians">
  <div class="column grow">&nbsp;</div>
  <div class="column center grow">
    <div class="rows chat grow">
      <div class="row grow messages rows" id="content" data-target="martians.messages">
        <em><small>There gonna be something...</small></em>
      </div>
      <div class="row">
        <form class="rows grow" data-action="martians#handleMessage">
          <input class="row" type="text" name="message" data-target="martians.input"/>
          <button type="submit" class="submit-btn">Send Message</button>
        </form>
      </div>
    </div>
  </div>
  <div class="column grow">
    <%= image_tag "/martians.png", size: "200x200" %>
  </div>
</div>
